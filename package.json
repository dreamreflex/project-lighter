{
  "name": "dream-reflex-lighter",
  "version": "1.0.0",
  "description": "多项目一键启动管理工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.dreamreflex.lighter",
    "productName": "DreamReflexLighter",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "logo.ico",
      "logo.png",
      "logo.svg",
      "package.json",
      "!node_modules/**/*",
      "!dist/**/*"
    ]
  },
  "keywords": [
    "electron",
    "launcher",
    "project-manager"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12"
  }
}
